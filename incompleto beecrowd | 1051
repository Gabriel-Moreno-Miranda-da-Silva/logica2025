#include <iostream>
#include <iomanip>
#include <string>
using namespace std;
 
int calcularimposto (int r, int i){
    int V=0;
    float imposto[3][4]={
        {0,0.08,0.18,0.28},
        {0,2000.01,3000.01,4500.00}, 
        {2000,3000,4500,99999}
    };
    if (r>imposto[3][i]){
        V += (imposto[3][i] - imposto[2][i]) * imposto[1][i];
        V += calcularimposto (i+1,r);
    }
    else {
        V += (r - imposto[2][i]) * imposto[1][i];
    }
    return V;
}
 
int main() {
    int renda;
    float pagar = 0;
    
    cin >> renda;
    pagar = calcularimposto(renda,0);
    if (pagar = 0){
        cout << "Isento";
    }
    else {
        cout << "R$ " << setprecision(2) << pagar; 
    }
    
    return 0;
}
